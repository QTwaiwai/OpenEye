<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.VideoActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#651414"
                app:navigationIcon="@drawable/back"
                app:layout_scrollFlags="scroll|enterAlways"
                app:titleTextColor="@color/white"/>
        </com.google.android.material.appbar.AppBarLayout>

        <xyz.doikki.videoplayer.player.VideoView
            android:id="@+id/video"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:transitionName="sharedImage"/>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#70574F">
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="这是视频标题"
                    android:textColor="@color/white"
                    android:lines="1"
                    android:textSize="20dp"
                    android:padding="5dp"
                    android:ellipsize="end"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/tv_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="28dp"
                    android:text="作者"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_title" />

                <TextView
                    android:id="@+id/tv_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:text="标签"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toEndOf="@+id/tv_author"
                    app:layout_constraintTop_toBottomOf="@id/tv_title" />

                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="这是视频描述"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toBottomOf="@id/tv_tag"
                    app:layout_constraintStart_toStartOf="parent"/>
                <ImageView
                    android:id="@+id/iv_likes"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="28dp"
                    android:src="@drawable/like"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_description" />

                <TextView
                    android:id="@+id/tv_likes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-5dp"
                    android:gravity="center"
                    android:text="10086"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="@id/iv_likes"
                    app:layout_constraintTop_toBottomOf="@id/iv_likes" />

                <ImageView
                    android:id="@+id/iv_star"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="132dp"
                    android:textColor="@color/white"
                    android:background="@drawable/star"
                    app:layout_constraintStart_toEndOf="@id/iv_likes"
                    app:layout_constraintTop_toTopOf="@id/iv_likes" />
                <TextView
                    android:id="@+id/tv_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收藏"
                    android:layout_marginStart="-3dp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    app:layout_constraintStart_toStartOf="@id/iv_star"
                    app:layout_constraintTop_toBottomOf="@id/iv_star"/>

                <ImageView
                    android:id="@+id/iv_share"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="120dp"
                    android:background="@drawable/share"
                    app:layout_constraintStart_toEndOf="@id/iv_star"
                    app:layout_constraintTop_toTopOf="@id/iv_star" />


                <TextView
                    android:id="@+id/tv_related"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="相关视频"
                    android:textSize="25dp"
                    android:background="#505050"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:padding="10dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_star"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_others"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_related"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>
</LinearLayout>
